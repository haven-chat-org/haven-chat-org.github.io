<section class="section preview" aria-label="App preview">
  <div class="container section-center">
    <span class="section-label">The App</span>
    <h2 class="section-heading">See Haven in action</h2>
    <p class="section-sub">
      Servers, channels, DMs, voice chat, roles, file sharing, everything you'd expect, with encryption you deserve.
    </p>
    <div class="preview-wrapper">
      <div class="browser-frame animate-scale">
        <div class="browser-bar">
          <span class="browser-dot browser-dot--red"></span>
          <span class="browser-dot browser-dot--yellow"></span>
          <span class="browser-dot browser-dot--green"></span>
          <span class="browser-url">haven-chat.org</span>
        </div>
        <div class="browser-content">
          <img
            src="/screenshots/night-mode.png"
            alt="Haven chat interface showing servers, channels, and encrypted messages in night mode"
            width="1920"
            height="1080"
            loading="lazy"
            decoding="async"
          />
        </div>
      </div>
    </div>
  </div>
</section>
